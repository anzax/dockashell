{
  "git": {
    "requireBranch": false,
    "commitMessage": "release: v${version}",
    "tagName": "v${version}",
    "push": false,
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "draft": true
  },
  "npm": {
    "publish": true,
    "publishPath": ".",
    "tag": "latest"
  },
  "hooks": {
    "before:init": [
      "./scripts/ensure-release-ready.sh",
      "npm run format",
      "npm run test",
      "npm run lint"
    ]
  }
}
